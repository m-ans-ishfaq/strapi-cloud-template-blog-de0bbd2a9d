{
  "kind": "collectionType",
  "collectionName": "chapters",
  "info": {
    "singularName": "chapter",
    "pluralName": "chapters",
    "displayName": "Chapter"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "unit": {
      "type": "enumeration",
      "enum": [
        "Waves",
        "Modern Physics",
        "Quantum Mechanics"
      ]
    },
    "order": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 100
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "topics": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::topic.topic",
      "mappedBy": "chapter"
    }
  }
}
